<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:elevation="15dp"
    tools:context=".seller_maintain_product">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/maint_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            />
        <EditText
            android:id="@+id/maint_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product name"
            android:layout_below="@+id/maint_product_image"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/input_design"
            android:textColor="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/maint_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_product_name"
            android:hint="Product Price"
            android:textAlignment="center"
            android:textSize="18dp"
            android:padding="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/input_design"
            android:textColor="@color/colorPrimaryDark"
            />

        <EditText
            android:id="@+id/maint_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maint_product_price"
            android:hint="Product Description"
            android:layout_marginTop="6dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:padding="20dp"
            android:background="@drawable/input_design"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apply Changes"
            android:background="@drawable/buttons"
            android:textColorHint="#fff"
            android:textStyle="bold"
            android:layout_below="@+id/maint_product_description"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            ></Button>
        <Button
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Delete product"
            android:background="@drawable/buttons"
            android:textColorHint="#fff"
            android:textStyle="bold"
            android:layout_below="@+id/apply_changes_btn"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            ></Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>